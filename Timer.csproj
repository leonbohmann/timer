    <ImplicitUsings>enable</ImplicitUsings>
    <UseWPF>true</UseWPF>
    <ApplicationIcon>Watch_1.ico</ApplicationIcon>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="Watch_1.ico" />
